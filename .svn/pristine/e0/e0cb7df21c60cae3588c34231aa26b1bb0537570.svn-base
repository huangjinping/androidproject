<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <cn.cooperlink.privatetutor.view.CircleImageView
                android:id="@+id/img_tutor_icon"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/txt_tutor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张老师" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_comm_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京初中物理老师" />

                <TextView
                    android:id="@+id/txt_comm_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2014-12-01"
                    android:textColor="@color/segment_chacked" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_comm_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_comm_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:text="(12)"
                    android:textColor="@color/segment_chacked" />

                <TextView
                    android:id="@+id/txt_comm_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(12)"
                  
                    android:textColor="@color/segment_chacked" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>