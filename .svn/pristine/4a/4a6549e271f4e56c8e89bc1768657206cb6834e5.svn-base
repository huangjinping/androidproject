<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_headerview" />
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    >
     <TextView
        android:id="@+id/txt_share_title"
        style="@style/details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册领奖，分享有礼"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/txt_share_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="7" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <cn.cooperlink.privatetutor.view.CircleImageView
                android:id="@+id/img_share_sina"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_sina" />
            
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <cn.cooperlink.privatetutor.view.CircleImageView
                android:id="@+id/img_share_qq"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_qq" />
            
        </RelativeLayout><RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <cn.cooperlink.privatetutor.view.CircleImageView
                android:id="@+id/img_share_weixin"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_weixin" />
            
        </RelativeLayout>
    </LinearLayout>
    
</LinearLayout>
   
</LinearLayout>