<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
<style name="user_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
    </style>
    
<style name="title_text">
            <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
</style>

<style   name="details_text">
    <item name="android:textSize" >14sp</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:textColor">@color/details_body</item>
</style>


<style    name="setting_linearlayout">
    <item name="android:textSize">16sp</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">30dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        
    
</style>


<style   name="solid_line">
    <item  name="android:background">@drawable/ic_horizontal_solid_line</item>
    
</style>

<style name="submit_button">
            <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_submit_button</item>
</style>



</resources>
