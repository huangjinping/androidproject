<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="10dp"
    android:background="@drawable/shape_white_background"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/txt_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-12-03  12:30" />
            <TextView
                android:id="@+id/txt_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="XX没有接单"
                android:textColor="@color/segment_chacked" />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:src="@color/text_hint_color" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <cn.cooperlink.privatetutor.view.CircleImageView
            android:id="@+id/img_tutor_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_tutor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张**" />
            <TextView
                android:id="@+id/txt_tutor_subjects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数学语文" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:src="@color/text_hint_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_order_pay"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
             android:padding="5dp"
             android:gravity="center"
            android:text="支付" 
            android:textColor="@color/segment_chacked"
            android:background="@drawable/selector_pay_button"
            />

        <TextView
                        android:id="@+id/txt_order_again"
            
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
                         android:gravity="center"
            android:background="@drawable/shape_single_again"
            android:textColor="@color/green_head"
            android:text="再来一单" />
    </LinearLayout>

</LinearLayout>