<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/segment_chacked" >

        <TextView
            android:id="@+id/txt_sorting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="价格最低"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    
        
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
            <RadioGroup 
                android:id="@+id/rag_sorting"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >
                
                <RadioButton 
                    android:id="@+id/rab_comprehensive"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                   android:layout_weight="1"
                   android:text="综合\n排序"
                   android:textColor="@color/list_text"
                   android:gravity="center"
                    />
                
                     <RadioButton 
                         android:id="@+id/rab_lowest_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                   android:layout_weight="1"
                   android:text="价格\n最低"
                   android:textColor="@color/list_text"
                   android:gravity="center"
                    />
                     <RadioButton 
                         android:id="@+id/rab_highest_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                   android:layout_weight="1"
                   android:text="价格\n最高"
                   android:textColor="@color/list_text"
                   android:gravity="center"
                    />
                
            </RadioGroup>
             <View
            android:layout_width="100dp"
            android:layout_centerInParent="true"
            android:layout_height="100dp" />
    </RelativeLayout>
        
        
        
        
    <RelativeLayout
        android:id="@+id/layout_bottom"
                        android:layout_marginBottom="10dp"
        
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/segment_chacked" >

        <TextView
            style="@style/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我选好了" />
    </RelativeLayout>

    
</LinearLayout>
