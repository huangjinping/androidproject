<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_headerview" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <cn.cooperlink.privatetutor.view.CircleImageView
                android:id="@+id/circleImageView1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_account" />

            <TextView
                style="@style/details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="丫头的家"
                android:textColor="@color/white" />

            <TextView
                style="@style/details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="女　初中二年级"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CAE0EE"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_white_background"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="30dp"
                            android:src="@drawable/ic_demand_subjects"
                            android:layout_height="30dp" />

                        <TextView
                            style="@style/user_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="补习科目"
                            android:textColor="@color/segment_chacked" />

                        <TextView
                            style="@style/details_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(只支持单选)" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_demand_subjects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <ImageView
                        style="@style/solid_line"
                        android:layout_width="match_parent"
                        
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                                                android:padding="5dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:src="@drawable/ic_learning_situation"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <TextView
                            style="@style/user_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学习情况"
                            android:textColor="@color/segment_chacked" />

                        <TextView
                            style="@style/details_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(只支持单选)" />
                    </LinearLayout>
                     <LinearLayout
                        android:id="@+id/layout_learning_situation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                                       <ImageView
                        style="@style/solid_line"
                        android:layout_width="match_parent"
                         android:layout_marginTop="10dp"
                        android:layout_height="wrap_content" />
                                         <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                                                android:padding="5dp"
                        
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp" />

                        <TextView
                            style="@style/user_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="价格区间"
                            android:textColor="@color/segment_chacked" />

                        <TextView
                            style="@style/details_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(只支持单选)" />
                    </LinearLayout>
                     <LinearLayout
                        android:id="@+id/layout_price_range"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            
            
            <Button 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               style="@style/submit_button"
               android:layout_margin="10dp"
               android:onClick="onSubmit"
                android:text="提交"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>